<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FakeTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/welcome</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="MyBtn">
        <item name="android:background">@drawable/shape_yellow_button</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/rect_green_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_white"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_header_tip"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="提醒"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_15"/>

            <TextView
                android:id="@+id/tv_tip1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_header"
                android:text="现只对天津地区的用户服务"
                android:textColor="@color/font_dark"
                android:textSize="@dimen/font_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_tip1"
                android:layout_alignRight="@id/tv_tip1"
                android:layout_below="@id/tv_tip1"
                android:layout_marginTop="4dp"
                android:text="请用户下单前一定注意地区问题，如类似问题造成损失，由用户负责"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_14"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_yellow_button"
            android:clickable="true"
            android:gravity="center"
            android:onClick="doRent"
            android:text="马 上 用 车"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/rl_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:background="@color/gray_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:paddingLeft='20dp'
                android:paddingRight='20dp'
                android:text="推荐车型"/>
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>
